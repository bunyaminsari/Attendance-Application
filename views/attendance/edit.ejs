<%include ../partials/header%>

<div class="ui main text container segment ">
    <div class="ui huge header">Edit Attendance</div>
    <form  class="ui form" action="/students/<%=student_id%>/attendances/<%= attendance._id%>?_method=PUT" method="POST">
        <div class="field">
            <label>Date</label>
            <input type="date" name="attendance[created]" value="<%=attendance.created%>" required>
        </div>
        <div class="field">
            <label>Status</label>
            <select  class="ui dropdown" name="attendance[status]">
                <option value="P">Present</option>
                <option value="A">Absent</option>
                <option value="L">Late</option>
            </select>
        </div>
        <div class="field">
            <label>Remarks</label>
            <input type="text" name="attendance[remarks]" value="<%=attendance.remarks%>">
        </div>
        <input class="ui blue big basic button" type="submit">
    </form>
</div>


<%include ../partials/footer%>
