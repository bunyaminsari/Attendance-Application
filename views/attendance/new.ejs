<%include ../partials/header%>

<div class="ui main text container segment ">
    <div class="ui huge header">New Attendance for "<%=student.firstname%> <%=student.lastname%>" </div>
    <form  class="ui form" action="/students/<%= student._id%>/attendances" method="post">
        <div class="field">
            <label>Date</label>
            <input type="date" name="attendance[created]" required>
        </div>
        <div class="field">
            <label>Status</label>
            <select  class="ui dropdown" name="attendance[status]">
                <option value="P">Present</option>
                <option value="A">Absent</option>
                <option value="L">Late</option>
            </select>
        </div>
        <div class="field">
            <label>Remarks</label>
            <input type="text" name="attendance[remarks]" placeholder="Remarks">
        </div>
        <input class="ui blue big basic button" type="submit">
    </form>
</div>


<%include ../partials/footer%>
